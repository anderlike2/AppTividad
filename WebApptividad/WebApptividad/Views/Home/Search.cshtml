<h3>@ViewBag.Message</h3>

<div class="container" ng-controller="SearchController">
    <form>
        <div ng-class="{errorInfo: classValue}" ng-show="showMessageInfo">
            <p>{{messageInfo}}</p>
        </div>
        <br />
        <div class="form-group">
            <label for="pokemonname">Pokemon name</label>
            <input type="text" class="form-control" ng-model="search" name="textSearch" required />
            <small id="searchHelp" class="form-text text-muted">Please enter the name of a pokemon.</small>
        </div>
        <button type="button" class="btn btn-primary" ng-click="searchPokemon()">Search</button>
    </form>
</div>
